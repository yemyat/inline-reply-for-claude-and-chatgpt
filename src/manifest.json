{
  "manifest_version": 3,
  "name": "Inline Reply for Claude and ChatGPT",
  "version": "0.1.0",
  "description": "Add inline replies to ChatGPT and Claude responses",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css", "notyf.min.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
